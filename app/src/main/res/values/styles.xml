<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="AppTheme.FitStateBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <style name="AppTheme.ToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="titleTextAppearance">@style/AppTheme.TextAppearance.ToolBar</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="elevation">@dimen/toolbar_elevation_0dp</item>
        <item name="android:background">@color/transparent</item>
    </style>


    <style name="AppTheme.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="elevation">@dimen/bottomNavigationView_elevation_8dp</item>
        <item name="itemBackground">@color/white</item>
    </style>




    <style name="AppTheme.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>

    </style>

    <style name="AppTheme.TextAppearance.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/title_24sp</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="AppTheme.TextAppearance.Title.BIG" >
        <item name="android:textSize">@dimen/title_30sp</item>
        <item name="android:textColor">@color/dark_text</item>
    </style>

    <style name="AppTheme.TextAppearance.Name" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/name_16sp</item>
        <item name="android:textColor">@color/dark_text</item>
    </style>

    <style name="AppTheme.TextAppearance.Body" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/body_16sp</item>
        <item name="android:textColor">@color/body</item>
    </style>

    <style name="AppTheme.TextAppearance.Body.Big">
        <item name="android:textSize">@dimen/body_24sp</item>
        <item name="android:textColor">@color/body</item>
    </style>

    <style name="AppTheme.TextAppearance.Other" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/other_12sp</item>
        <item name="android:textColor">@color/other</item>
    </style>

    <style name="AppTheme.TextAppearance.ToolBar" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.TextAppearance.Tab">
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textSize">15sp</item>

    </style>

    <!--Album相关主题-->

    <style name="AppTheme.TextAppearance.Album">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.TextAppearance.Album.Title" parent="AppTheme.TextAppearance.Title">

        <item name="android:textSize">@dimen/title_30sp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="AppTheme.TextAppearance.Album.Body" parent="AppTheme.TextAppearance.Body">
        <item name="android:textSize">@dimen/body_16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingMultiplier">1.2</item>


    </style>




    <style name="AppTheme.CardView" parent="CardView">
        <item name="cardElevation">@dimen/cardview_elevation_8dp</item>

    </style>

    <style name="AppTheme.SeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressDrawable">@drawable/seek_drawable</item>
        <item name="android:maxHeight">2dp</item>
        <item name="android:minHeight">2dp</item>
    </style>

    <style name="AppTheme.AppBar" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@color/transparent</item>

    </style>




</resources>
