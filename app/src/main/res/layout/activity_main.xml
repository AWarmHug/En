<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rela_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.me.en.core.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_main">
    </android.support.v4.view.ViewPager>


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_main"
        style="@style/AppTheme.BottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        app:itemIconTint="@color/bottom_navi_color_select"
        app:itemTextColor="@color/bottom_navi_color_select"
        app:menu="@menu/eye_bottom_menu"
        >

    </android.support.design.widget.BottomNavigationView>

</RelativeLayout>
