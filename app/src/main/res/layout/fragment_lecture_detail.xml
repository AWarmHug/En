<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg">


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_background"
                android:layout_width="match_parent"
                android:layout_height="250dp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/left_right_margin_16dp">


                <TextView

                    android:id="@+id/tv_title"
                    style="@style/AppTheme.TextAppearance.Album.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_bottom_margin_8dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_site_time"
                    style="@style/AppTheme.TextAppearance.Other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_bottom_margin_8dp" />

                <TextView
                    android:id="@+id/tv_desc"
                    style="@style/AppTheme.TextAppearance.Other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_bottom_margin_8dp" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_play"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_vec_play" />


            </RelativeLayout>


            <TextView
                style="@style/AppTheme.TextAppearance.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:drawableBottom="@drawable/ic_vec_line"
                android:text="演讲正文"
                android:textSize="18sp"

                />


            <TextView
                android:id="@+id/tv_purecontent"
                style="@style/AppTheme.TextAppearance.Album.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.3"
                android:padding="20dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_toArticle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="全文阅读"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="40dp"
                android:background="@color/colorAccent" />

            <TextView
                style="@style/AppTheme.TextAppearance.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:drawableBottom="@drawable/ic_vec_line"
                android:text="演讲嘉宾"
                android:textSize="18sp"

                />

            <ImageView
                android:id="@+id/iv_lecturer_header"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/tv_lecturer_name"
                style="@style/AppTheme.TextAppearance.Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_bottom_margin_8dp"
                android:gravity="center_horizontal"
                android:textColor="@color/blue"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_lecturer_desc"
                style="@style/AppTheme.TextAppearance.Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_bottom_margin_8dp"
                android:gravity="center_horizontal"
                android:textColor="@color/blue"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="40dp"
                android:background="@color/colorAccent" />

            <TextView
                style="@style/AppTheme.TextAppearance.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:drawableBottom="@drawable/ic_vec_line"
                android:text="相关推荐"
                android:textSize="18sp" />


            <LinearLayout
                android:id="@+id/ll_related"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"></LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


    <android.support.v7.widget.Toolbar
        style="@style/AppTheme.ToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.Toolbar>


</RelativeLayout>