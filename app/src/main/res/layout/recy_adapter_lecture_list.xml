<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/AppTheme.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="0dp"


    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="200dp" />


        <TextView
            android:id="@+id/tv_title"
            style="@style/AppTheme.TextAppearance.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/top_bottom_margin_8dp"
            android:layout_below="@+id/iv_cover"
            android:text="哈哈哈哈"
            android:singleLine="true"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_lecture_time_site"
            style="@style/AppTheme.TextAppearance.Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_title"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="@dimen/top_bottom_margin_8dp"
            android:text="哈哈哈哈"
            android:textSize="12sp"


            />

        <TextView
            android:id="@+id/tv_lecturer_name"
            style="@style/AppTheme.TextAppearance.Other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_title"
            android:layout_below="@+id/tv_lecture_time_site"
            android:layout_marginTop="@dimen/top_bottom_margin_8dp"
            android:text="来自 哈哈哈"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_viewnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_lecturer_name"
            android:layout_alignParentRight="true"
            android:text="盛开的监控室内"
            android:textSize="12sp" />


    </RelativeLayout>


</android.support.v7.widget.CardView>